// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int        @id @default(autoincrement())
  name      String
  email     String     @unique
  shoplists Shoplist[] // Define the `shoplists` field as an array of `Shoplist` objects
}

model Shoplist {
  id        Int      @id @default(autoincrement())
  name      String
  items     String[]
  createdAt DateTime @default(now())
  usersId   Int // Define the foreign key field as `usersId`
  users     User     @relation(fields: [usersId], references: [id]) // Define the relation to the `User` model
}
